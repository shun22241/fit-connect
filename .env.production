# 本番環境用設定
NODE_ENV=production

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=https://fitconnect.app
NEXTAUTH_URL=https://fitconnect.app
NEXTAUTH_SECRET=super-secure-production-secret

# Database (Production PostgreSQL)
DATABASE_URL="postgresql://prod_user:secure_password@prod-db:5432/fitconnect_prod"

# Supabase (Production Project)
NEXT_PUBLIC_SUPABASE_URL=https://your-prod-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-prod-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-prod-service-role-key

# OpenAI (Production)
OPENAI_API_KEY=sk-your-production-openai-key

# Push Notifications (Production)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-prod-vapid-public-key
VAPID_PRIVATE_KEY=your-prod-vapid-private-key
VAPID_EMAIL=mailto:noreply@fitconnect.app

# Rate Limiting (Strict for production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_HOUR=100

# Logging (Error level only)
LOG_LEVEL=error
LOG_TO_CONSOLE=false
LOG_TO_FILE=true

# Security (Maximum security)
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Analytics (Production)
GOOGLE_ANALYTICS_ID=G-PRODUCTION123
SENTRY_DSN=https://production-sentry-dsn@sentry.io/project

# Features Flags (Production)
NEXT_PUBLIC_FEATURE_AI_COACHING=true
NEXT_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_OFFLINE_MODE=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# Production Tools (Disabled)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_API_MOCK=false

# Performance Monitoring
VERCEL_ANALYTICS_ID=your-production-vercel-analytics-id

# Search Console
GOOGLE_SEARCH_CONSOLE_VERIFICATION=your-production-verification-id
GOOGLE_VERIFICATION_ID=your-google-verification-id

# CDN & Storage
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
AWS_S3_BUCKET=fitconnect-prod-assets
AWS_REGION=ap-northeast-1

# Error Tracking
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=fitconnect
SENTRY_PROJECT=fitconnect-web

# Database Connection Pooling
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000

# Redis (Caching & Sessions)
REDIS_URL=redis://prod-redis:6379
REDIS_PASSWORD=secure-redis-password

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@fitconnect.app

# Backup
BACKUP_STORAGE_URL=s3://fitconnect-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key