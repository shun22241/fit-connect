# ステージング環境用設定
NODE_ENV=staging

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=https://staging.fitconnect.app
NEXTAUTH_URL=https://staging.fitconnect.app
NEXTAUTH_SECRET=staging-secret-key

# Database (Staging PostgreSQL)
DATABASE_URL="postgresql://postgres:password@staging-db:5432/fitconnect_staging"

# Supabase (Staging Project)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# OpenAI (Staging/Testing)
OPENAI_API_KEY=sk-your-staging-openai-key

# Push Notifications (Staging)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-staging-vapid-public-key
VAPID_PRIVATE_KEY=your-staging-vapid-private-key
VAPID_EMAIL=mailto:staging@fitconnect.app

# Rate Limiting (Moderate for staging)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_HOUR=500

# Logging (Info level)
LOG_LEVEL=info
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Security (Enabled but less strict)
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Analytics (Testing)
GOOGLE_ANALYTICS_ID=G-STAGING123
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project

# Features Flags (Staging)
NEXT_PUBLIC_FEATURE_AI_COACHING=true
NEXT_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_OFFLINE_MODE=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# Staging Tools
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_API_MOCK=false

# Performance Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Search Console
GOOGLE_SEARCH_CONSOLE_VERIFICATION=your-staging-verification-id