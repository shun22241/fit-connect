# 開発環境用設定
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3003
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=dev-secret-key-change-in-production

# Database (Local PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fitconnect_dev"

# Supabase (Development Project)
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-dev-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-dev-service-role-key

# OpenAI (Development/Testing)
OPENAI_API_KEY=sk-your-dev-openai-key

# Push Notifications (Development)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-dev-vapid-public-key
VAPID_PRIVATE_KEY=your-dev-vapid-private-key
VAPID_EMAIL=mailto:dev@fitconnect.app

# Rate Limiting (Relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging (Debug level)
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# Security (Relaxed for development)
SECURITY_HEADERS_ENABLED=false
CSP_ENABLED=false

# Analytics (Disabled in development)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# Features Flags (Development)
NEXT_PUBLIC_FEATURE_AI_COACHING=true
NEXT_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_OFFLINE_MODE=true
NEXT_PUBLIC_FEATURE_ANALYTICS=false

# Development Tools
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_API_MOCK=false